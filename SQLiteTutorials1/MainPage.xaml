<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SQLiteTutorials1.MainPage">

    <VerticalStackLayout Padding="20">
        <Entry x:Name="NoteEntry" Placeholder="Type a note..." />
        <Button Text="Save Note" Clicked="OnSaveNoteClicked" />
        <ListView x:Name="NotesList">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Text}" Detail="{Binding CreatedAt}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>


</ContentPage>
