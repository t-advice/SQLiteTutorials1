<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SQLiteTutorials1.MainPage"
             Title="Notes App">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15" BackgroundColor="#FAFAFA">

            <Label Text="📝Notes"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <Entry x:Name="NoteEntry"
                   Placeholder="Type or edit a note..."
                   ClearButtonVisibility="WhileEditing"
                   BackgroundColor="White"
                   TextColor="Black"
                   HeightRequest="50"
                   Margin="0,10,0,0" />

            <Button Text="Save Note"
                    BackgroundColor="#2196F3"
                    TextColor="White"
                    CornerRadius="10"
                    Clicked="OnSaveNoteClicked" />

            <ListView x:Name="NotesList"
                      ItemTapped="OnNoteTapped"
                      Margin="0,20,0,0">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Text}"
                                  Detail="{Binding CreatedAt, StringFormat='{0:g}'}">
                            <TextCell.ContextActions>
                                <MenuItem Text="Delete"
                                          Clicked="OnDeleteNoteClicked"
                                          CommandParameter="{Binding .}"
                                          IsDestructive="True" />
                            </TextCell.ContextActions>
                        </TextCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

